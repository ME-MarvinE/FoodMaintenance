<UserControl
    x:Class="FoodMaintenance.Views.ProductTypesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Models="clr-namespace:FoodMaintenance.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:FoodMaintenance.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding ReloadDataCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <StackPanel Margin="40,30,40,20">

        <Label
            Content="Product Types"
            FontSize="{StaticResource Heading1FontSize}"
            FontWeight="Bold"/>

        <Label
            Content="View"
            Margin="0,15,0,0"
            FontSize="{StaticResource Heading2FontSize}"
            FontWeight="Bold"/>

        <Border
            Padding="15,20,15,20"
            Background="{StaticResource ContentBackgroundColorBrush}"
            CornerRadius="15">

            <DataGrid
                Height="300"
                AlternatingRowBackground="#808090"
                AutoGenerateColumns="False"
                Background="Transparent"
                BorderThickness="0"
                CanUserAddRows="False"
                CanUserDeleteRows="False"
                Foreground="White"
                HorizontalScrollBarVisibility="Auto"
                IsReadOnly="True"
                ItemsSource="{Binding ProductTypes}"
                RowBackground="#505060"
                SelectedItem="{Binding SelectedProductType}"
                VerticalScrollBarVisibility="Auto">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="{x:Type DataGridColumnHeader}">
                        <Setter Property="Foreground" Value="Black"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Name}" Header="Name"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <Grid Margin="-10,20,-10,0">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label
                Grid.Row="0"
                Grid.Column="0"
                Margin="10,0,10,0"
                Content="Create"
                FontSize="{StaticResource Heading2FontSize}"
                FontWeight="Bold"/>

            <Border
                Grid.Row="1"
                Grid.Column="0"
                Margin="10,0,10,0"
                Padding="15,10,15,10"
                Background="{StaticResource ContentBackgroundColorBrush}"
                CornerRadius="15">

                <StackPanel>



                    <Label
                        Margin="0,5,0,0"
                        Content="Name"
                        FontSize="{StaticResource Heading3FontSize}"/>
                    <TextBox
                        x:Name="ProductTypeToAddNameTextBox"
                        Margin="0,5,0,0"
                        FontSize="{StaticResource Text1FontSize}"
                        Validation.ErrorTemplate="{StaticResource ValidationRuleErrorTemplate}">
                        <TextBox.Text>
                            <Binding
                                Path="ProductTypeToAdd.Name"
                                UpdateSourceTrigger="PropertyChanged"
                                ValidatesOnDataErrors="True">
                                <Binding.ValidationRules>
                                    <StaticResource ResourceKey="NotNullOrWhiteSpaceValidationRule"/>
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>

                    <Button
                        Margin="0,10,0,0"
                        Padding="10"
                        Command="{Binding AddProductTypeCommand}"
                        Content="Create"
                        FontSize="{StaticResource Text1FontSize}">
                        <Button.Style>
                            <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="{x:Type Button}">
                                <Setter Property="IsEnabled" Value="False"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding (Validation.HasError), ElementName=ProductTypeToAddNameTextBox}" Value="False">
                                        <Setter Property="IsEnabled" Value="True"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                </StackPanel>
            </Border>

            <Label
                Grid.Row="0"
                Grid.Column="1"
                Margin="10,0,10,0"
                Content="Update"
                FontSize="{StaticResource Heading2FontSize}"
                FontWeight="Bold"/>

            <Border
                Grid.Row="1"
                Grid.Column="1"
                Margin="10,0,10,0"
                Padding="15,10,15,10"
                Background="{StaticResource ContentBackgroundColorBrush}"
                CornerRadius="15">

                <StackPanel>

                    <StackPanel.Style>
                        <Style TargetType="{x:Type StackPanel}">
                            <Setter Property="IsEnabled" Value="True"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedProductType}" Value="{x:Null}">
                                    <Setter Property="IsEnabled" Value="False"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <Label
                        Margin="0,5,0,0"
                        Content="Name"
                        FontSize="{StaticResource Heading3FontSize}"/>
                    <TextBox
                        x:Name="SelectedProductTypeNameTextBox"
                        Margin="0,5,0,0"
                        FontSize="{StaticResource Text1FontSize}"
                        Validation.ErrorTemplate="{StaticResource ValidationRuleErrorTemplate}">
                        <TextBox.Text>
                            <Binding
                                Path="SelectedProductType.Name"
                                UpdateSourceTrigger="PropertyChanged"
                                ValidatesOnDataErrors="True">
                                <Binding.ValidationRules>
                                    <StaticResource ResourceKey="NotNullOrWhiteSpaceValidationRule"/>
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>

                    <Button
                        Margin="0,10,0,0"
                        Padding="10"
                        Command="{Binding UpdateProductTypeCommand}"
                        Content="Update"
                        FontSize="{StaticResource Text1FontSize}">
                        <Button.Style>
                            <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="{x:Type Button}">
                                <Setter Property="IsEnabled" Value="False"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding (Validation.HasError), ElementName=SelectedProductTypeNameTextBox}" Value="False">
                                        <Setter Property="IsEnabled" Value="True"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button
                        Margin="0,10,0,0"
                        Padding="10"
                        Command="{Binding DeleteProductTypeCommand}"
                        Content="Delete"
                        FontSize="{StaticResource Text1FontSize}"
                        Style="{StaticResource BadButton}"/>

                </StackPanel>
            </Border>

            <Label
                Grid.Row="0"
                Grid.Column="2"
                Margin="10,0,10,0"
                Content="Other"
                FontSize="{StaticResource Heading2FontSize}"
                FontWeight="Bold"/>

            <Border
                Grid.Row="1"
                Grid.Column="2"
                Margin="10,0,10,0"
                Padding="15,10,15,10"
                Background="{StaticResource ContentBackgroundColorBrush}"
                CornerRadius="15">

                <StackPanel>

                    <Button
                        Margin="0,30,0,0"
                        Padding="10"
                        Command="{Binding ReloadDataCommand}"
                        Content="Reload"
                        FontSize="{StaticResource Text1FontSize}"/>

                    <Button
                        Margin="0,10,0,0"
                        Padding="10"
                        Command="{Binding DeleteAllProductTypesCommand}"
                        Content="Delete All Product Types"
                        FontSize="{StaticResource Text1FontSize}"
                        Style="{StaticResource BadButton}"/>
                    
                </StackPanel>
            </Border>

        </Grid>

    </StackPanel>

</UserControl>
